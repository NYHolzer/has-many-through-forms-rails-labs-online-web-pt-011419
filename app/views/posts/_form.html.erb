<%= form_for(@post) do |f|%>
    <p>
        <%=f.label :title%>
        <%=f.text_field :title%>
    </p>

    <p>
        <%=f.label :content%>
        <%=f.text_field :content%>
    </p>

    <p>
        <%=f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b|%>
            <p><%=b.label%>
               <%=b.check_box%> 
            </p>
        <% end %>
    </p>

    <input type="text" id="post_categories_attributes_0_name" name="post[categories_attributes][0][name]"/>

    <%=f.submit%>
<% end %>
